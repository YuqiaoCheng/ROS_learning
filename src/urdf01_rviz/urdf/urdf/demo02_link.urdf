<!--  设置不同形状的机器人部件-->
<robot name ="my_car">
    <link  name ="base_link">
        <!-- 可视化标签-->
        <visual>
            <!--1.形状-->  
            <geometry>
                <!--立方体-->
                <!-- <box size = "0.3 0.2 0.1"/> -->
                <!--圆柱-->
                <!-- <cylinder radius ="0.1" length ="2"/> -->
                <!--球体-->
                <!-- <sphere radius ="1"/> -->
                <!--皮肤-->
                <mesh filename="package://urdf01_rviz/meshes/autolabor_mini.stl"/>

            </geometry>
            <!--2.偏移量和倾斜弧度-->
            <!--  xyz  设置机器人模型在x y z 上面的偏移量
                    rpy 设置倾斜弧度 x(row) y(pitch) z(yaw) -->
            <origin xyz ="0 0 0" rpy = "1.57 0 1.57" />
            <!--3.颜色-->
            <material name ="car_color" >
                <!--  r g b a(透明度)  这四个值都是在0-1范围-->
                <color rgba = "0 0.5 0.5 0.5 "/> 
            </material> 
        </visual>
    </link>
</robot>